<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:padding="10sp"
    tools:context=".employee.counsellor.extra_buttons.success_video_and_review.SuccessVideoAndReviewActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/media_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/success_video_link"
            android:importantForAutofill="no"
            android:inputType="textUri"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_layout">

        <EditText
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/review"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/button_blue"
        android:text="@string/submit"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>