<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".student.course.CourseDetailsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/course_details"
        android:textColor="#3949AB"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        style="@style/divider"
        android:layout_below="@id/title" />

    <TextView
        android:id="@+id/fee_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:text="@string/fee_submitted_type"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fee_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/fee_sub"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nextPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fee_sub"
        android:text="@string/next_payment_date"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nextPayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fee_sub"
        android:layout_toEndOf="@id/nextPay"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/courseStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextPay"
        android:text="@string/status"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/courseStatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextPayText"
        android:layout_toEndOf="@id/courseStat"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/courseContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseStat"
        android:text="@string/content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/courseContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseStat"
        android:layout_toEndOf="@id/courseContent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseContentText"
        android:text="@string/description"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseContent"
        android:layout_toEndOf="@id/description"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:text="@string/student_id"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_toEndOf="@id/sid"
        android:textSize="20sp" />

    <Button
        android:id="@+id/totalReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sid"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_back_1"
        android:padding="10dp"
        android:text="@string/total_reviews_given" />

    <Button
        android:id="@+id/activeProjectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalReview"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_back_1"
        android:padding="10dp"
        android:text="@string/active_projects_on_your_id" />

</RelativeLayout>