<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    tools:context=".admin.student.StudentDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/mobile_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout">
            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/mail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_number_layout">
            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:importantForAutofill="no"
                android:inputType="textWebEmailAddress"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/total_fee_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mail_layout">
            <EditText
                android:id="@+id/total_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_fee"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_fee_layout">
            <EditText
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/department"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/total_fee_submitted_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_layout">
            <EditText
                android:id="@+id/total_fee_submitted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_fee_submitted"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_of_fee_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_fee_submitted_layout">
            <EditText
                android:id="@+id/date_of_fee_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_1"
                android:importantForAutofill="no"
                android:inputType="date"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_of_fee_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_of_fee_1_layout">
            <EditText
                android:id="@+id/date_of_fee_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_2"
                android:importantForAutofill="no"
                android:inputType="date"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_of_fee_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_of_fee_2_layout">
            <EditText
                android:id="@+id/date_of_fee_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_3"
                android:importantForAutofill="no"
                android:inputType="date"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_of_fee_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_of_fee_3_layout">
            <EditText
                android:id="@+id/date_of_fee_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_4"
                android:importantForAutofill="no"
                android:inputType="date"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/payment_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_of_fee_4_layout">
            <EditText
                android:id="@+id/payment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_1"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/payment_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_1_layout">
            <EditText
                android:id="@+id/payment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_2"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/payment_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_2_layout">
            <EditText
                android:id="@+id/payment_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_3"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/payment_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_3_layout">
            <EditText
                android:id="@+id/payment_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_4"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_4_layout" />
        <Spinner
            android:id="@+id/payment_1_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_type" />
        <Spinner
            android:id="@+id/payment_2_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_1_mode" />
        <Spinner
            android:id="@+id/payment_3_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_2_mode" />
        <Spinner
            android:id="@+id/payment_4_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_3_mode" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reference_id_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_4_mode">
            <EditText
                android:id="@+id/reference_id_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_1_reference_id"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reference_id_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reference_id_1_layout">
            <EditText
                android:id="@+id/reference_id_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_2_reference_id"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reference_id_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reference_id_2_layout">
            <EditText
                android:id="@+id/reference_id_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_3_reference_id"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reference_id_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reference_id_3_layout">
            <EditText
                android:id="@+id/reference_id_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_4_reference_id"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/student_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reference_id_4_layout">
            <EditText
                android:id="@+id/student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/unique_student_id"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                tools:targetApi="o" />
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/student_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_id_layout" />
        <Button
            android:id="@+id/transfer_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_year"
            android:layout_centerInParent="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_back_2"
            android:padding="10sp"
            android:text="@string/transfer_payment"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_payment"
            android:layout_centerInParent="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_blue"
            android:text="@string/submit"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submit"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_red"
            android:text="@string/delete_student"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>