<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center"
    tools:context=".admin.StudentDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:text="Ajinkya Bedekar"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/name_layout"
            android:id="@+id/mobile_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:text="7297952357"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/mobile_number_layout"
            android:id="@+id/mail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:text="ajinkyabedekar2@gmail.com"
                android:inputType="textWebEmailAddress" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/mail_layout"
            android:id="@+id/total_fee_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/total_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_fee"
                android:text="500"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/total_fee_layout"
            android:id="@+id/department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/department"
                android:text="Computer Science and Engineering"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/department_layout"
            android:id="@+id/total_fee_submitted_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/total_fee_submitted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_fee_submitted"
                android:text="500"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/total_fee_submitted_layout"
            android:id="@+id/date_of_fee_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/date_of_fee_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_1"
                android:text="01/01/2001"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/date_of_fee_1_layout"
            android:id="@+id/date_of_fee_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/date_of_fee_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_2"
                android:text="01/01/2001"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/date_of_fee_2_layout"
            android:id="@+id/date_of_fee_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/date_of_fee_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_3"
                android:text="01/01/2001"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/date_of_fee_3_layout"
            android:id="@+id/date_of_fee_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/date_of_fee_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_fee_payment_4"
                android:text="01/01/2001"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/date_of_fee_4_layout"
            android:id="@+id/payment_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/payment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_1"
                android:text="100"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/payment_1_layout"
            android:id="@+id/payment_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/payment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_2"
                android:text="100"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/payment_2_layout"
            android:id="@+id/payment_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/payment_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_3"
                android:text="200"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/payment_3_layout"
            android:id="@+id/payment_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/payment_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_4"
                android:text="100"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_4_layout"
            android:id="@+id/payment_type" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_type"
            android:id="@+id/payment_1_mode" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_1_mode"
            android:id="@+id/payment_2_mode" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_2_mode"
            android:id="@+id/payment_3_mode" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_3_mode"
            android:id="@+id/payment_4_mode" />
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/payment_4_mode"
            android:id="@+id/reference_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reference_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reference_id"
                android:text="U101116FCS183"
                android:inputType="textAutoComplete" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/reference_id_layout"
            android:id="@+id/student_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/unique_student_id"
                android:text="183"
                android:inputType="textAutoComplete" />
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_id_layout"
            android:id="@+id/student_year" />
        <Button
            android:layout_below="@+id/student_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transfer_payment"
            android:text="@string/transfer_payment"
            android:layout_centerInParent="true" />
        <Button
            android:layout_below="@+id/transfer_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="@string/submit"
            android:layout_centerInParent="true" />
        <Button
            android:layout_below="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:text="Delete Student"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</ScrollView>