<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10sp"
    tools:context=".admin.news.NewsDetailsActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/motto_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout">

        <EditText
            android:id="@+id/motto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/motto"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/drive_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motto_layout">

        <EditText
            android:id="@+id/drive"
            android:layout_width="match_parent"
            android:importantForAutofill="no"
            android:inputType="textUri"
            android:layout_height="wrap_content"
            android:hint="@string/google_drive_link"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drive_layout">

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:importantForAutofill="no"
            android:inputType="date"
            android:layout_height="wrap_content"
            android:hint="@string/date"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/button_blue"
        android:text="@string/submit"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_red"
        android:padding="10sp"
        android:text="@string/delete_news"
        android:textColor="@color/white" />
</RelativeLayout>