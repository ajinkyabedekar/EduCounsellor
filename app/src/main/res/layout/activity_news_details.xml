<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.NewsDetailsActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Name"
            android:text="News"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/motto_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/motto"
            android:hint="Motto"
            android:text="News Motto"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/motto_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drive_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drive"
            android:hint="Google Drive Link"
            android:text="Google Drive Link to News"
            android:inputType="textUri" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/drive_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:hint="Date"
            android:text="13/09/2018"
            android:inputType="date" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:id="@+id/submit"
        android:layout_centerInParent="true"
        android:text="Submit" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:id="@+id/delete"
        android:layout_centerInParent="true"
        android:text="Delete News" />
</RelativeLayout>