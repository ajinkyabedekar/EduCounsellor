<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDashboardActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/admin_dashboard"
            android:textSize="30sp" />
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dash">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/add_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/add_student" />
            <Button
                android:id="@+id/edit_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/edit_student_details" />
            <Button
                android:id="@+id/student_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/students_list" />
            <Button
                android:id="@+id/startup_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/startup_list" />
            <Button
                android:id="@+id/placement_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/placement_list" />
            <Button
                android:id="@+id/edit_counsellor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/edit_counsellor_contact" />
            <Button
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/news" />
            <Button
                android:id="@+id/centers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/current_centers" />
            <Button
                android:id="@+id/courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/courses" />
            <Button
                android:id="@+id/add_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/add_employees" />
            <Button
                android:id="@+id/employee_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/employees_list" />

            <Button
                android:id="@+id/internships"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/internships" />
            <Button
                android:id="@+id/daily_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_back_1"
                android:padding="10sp"
                android:text="@string/employee_daily_report" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/webview"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/button_back_1"
                    android:hint="@string/webview_url"
                    android:importantForAutofill="no"
                    android:inputType="textUri"
                    android:padding="10sp"
                    tools:targetApi="o" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_toEndOf="@+id/webview"
                    android:background="@drawable/button_blue"
                    android:padding="10sp"
                    android:text="@string/add"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <Button
                android:id="@+id/chatCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_blue"
                android:padding="10sp"
                android:text="@string/live_chat"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_red"
                android:padding="10sp"
                android:text="@string/logout"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>